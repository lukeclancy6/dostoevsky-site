---
interface Props {
  attribution?: string;
}

const { attribution } = Astro.props;
---

<blockquote class="pull-quote">
  <slot />
  {attribution && (
    <footer class="pull-quote-attribution">
      <cite>â€” {attribution}</cite>
    </footer>
  )}
</blockquote>

<style>
  .pull-quote {
    font-family: var(--font-display);
    font-size: var(--font-size-xl);
    font-style: italic;
    color: var(--color-ink-heading);
    text-align: center;
    padding: var(--spacing-lg) var(--spacing-xl);
    background: var(--color-paper-mid);
    border-top: 2px solid var(--color-accent-tan);
    border-bottom: 2px solid var(--color-accent-tan);
    margin: var(--spacing-xl) 0;
    position: relative;
    line-height: 1.6;
  }

  .pull-quote::before {
    content: '\201C';
    font-size: 4em;
    color: var(--color-accent-red);
    line-height: 0;
    position: absolute;
    top: 0.6em;
    left: 0.2em;
    opacity: 0.5;
  }

  .pull-quote-attribution {
    font-family: var(--font-label);
    font-size: var(--font-size-sm);
    color: var(--color-ink-secondary);
    font-style: normal;
    margin-top: var(--spacing-md);
    letter-spacing: 0.06em;
  }
</style>
